<div class="posts-wrapper">
  <div class="row profile-header">
    <div class="col-md-6">
      <div class="img-circle">
        <%= profile_avatar_select(@user) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="user-name-and-follow">
        <h3 class="profile-user-name">
          <%= @user.user_name %>
        </h3>
        <span>
          <% if @user == current_user %>
          <%= link_to 'Edit Profile', edit_profile_path(@user.user_name), class: 'btn edit-button' %>
          <% end %>
        </span>
      </div>
      <p class="profile-bio">
        <%= @user.bio %>
      </p>
      <div class="user-statistics">
        <p>
          <%= pluralize @user.projects.count, 'project' %>
        </p>
      </div>
    </div>
  </div>
</div>



<% @projects.each do |project| %>


<h2>
  <%= link_to project.title, project_path(project) %>
</h2>
<h3>
  <%= image_tag project.image.url(:thumb) %>
</h3>
<p>
  <%= project.description %>
</p>

<% end %>
